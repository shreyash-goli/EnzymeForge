# EnzymeForge Development Container
# Full development environment with all dependencies
#
# Build: docker build -f Dockerfile.dev -t enzymeforge/dev:latest .
# Run: docker run -it --gpus all -v $(pwd):/workspace enzymeforge/dev:latest

FROM nvcr.io/nvidia/cuda:11.6.2-cudnn8-devel-ubuntu20.04

# Metadata
LABEL maintainer="EnzymeForge"
LABEL description="Full development environment for EnzymeForge"
LABEL version="1.0"

# Environment
ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    wget \
    ca-certificates \
    git \
    build-essential \
    curl \
    vim \
    tmux \
    python3.9 \
    python3.9-venv \
    python3.9-dev \
    python3-pip \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get autoremove -y \
    && apt-get clean

# Upgrade pip
RUN python3.9 -m pip install -q -U --no-cache-dir pip setuptools wheel

# Install core Python packages
RUN pip install -q --no-cache-dir \
    numpy \
    scipy \
    pandas \
    matplotlib \
    seaborn \
    biopython \
    rdkit \
    pytest \
    pytest-cov \
    black \
    ruff \
    mypy \
    ipython \
    jupyter

# Install PyTorch
RUN pip install -q --no-cache-dir \
    torch==2.2.1 \
    torchvision \
    torchaudio

# Install RDKit for chemistry
RUN pip install -q --no-cache-dir rdkit

# Install pdb2pqr
RUN pip install -q --no-cache-dir pdb2pqr==3.6.2

# Install PyRosetta (optional for development)
RUN pip install -q --no-cache-dir pyrosetta-installer==0.1.1 \
    && python3.9 -c 'import pyrosetta_installer; pyrosetta_installer.install_pyrosetta()' || true

# Install EnzymeForge
WORKDIR /workspace
COPY . /workspace/enzymeforge

RUN cd /workspace/enzymeforge && pip install -e ".[dev]"

# Set working directory
WORKDIR /workspace

# Default command
CMD ["/bin/bash"]
